---
import Head from "../components/Head.astro";
import Foot from "../components/Foot.astro";
import NavBar from "../components/NavBar.astro";
const legalPages = await Astro.glob("../pages/legal/*.md");
const aboutPages = await Astro.glob("../pages/about/*.{md,astro}");
---

<style>
  .linklist {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    margin: auto;
  }
  .linklist > p {
    padding: 1.7rem;
    margin: auto;
    font-size: 14px;
  }
</style>

<html lang="en">
  <head>
    <Head
      title="Support"
      description="General support and about page."
      color="#feb9db"
    />
  </head>
  <body>
    <NavBar />
    <div class="content__main">
      <h1>Support</h1>
      <p>Here you can find support links for projects I have created.</p>
      <div id="support-links" class="linklist">
        {
          legalPages.map((page) => (
            <p>
              <a href={page.url}>{page.frontmatter.title}</a>
            </p>
          ))
        }
      </div>
      <hr class="content__divider" />
      <h1>About</h1>
      <p>Here you can find some things that you'd like to know more about.</p>
      <div id="about-links" class="linklist">
        {
          aboutPages.map((page) => (
            <p>
              <a href={page.url}>{page.frontmatter.title}</a>
            </p>
          ))
        }
      </div>
    </div>
    <Foot />
  </body>
</html>

---
import "../styles/main.css";

import CookiesPopup from "./support/CookiesPopup.astro";
import Particles from "./Particles.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
  color?: string;
}

const {
  title,
  description,
  color = "#0d0d0d",
  image = "/images/uh-oh.png",
} = Astro.props;
---

<head>
  <!-- Global Metadata -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="generator" content={Astro.generator} />
  <meta content={color} name="theme-color" />
  <meta name="color-scheme" content="dark light" />

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.url)} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={Astro.url} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, Astro.url)} />

  <!-- Scripts -->
  <script
    defer
    data-domain="auravoid.dev"
    src="https://plausible.floatingmilkshake.com/js/plausible.js"
  ></script>
  <script defer src="https://cdn.auravoid.dev/data/made-by-aura.js"></script>

  <!-- Styles -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css"
  />
</head>
<CookiesPopup />
<Particles />
<script>
  import { setTheme } from "../scripts/main.js";
  setTheme();
</script>

---
export interface Project {
  repo: string;
  url: string;
  description: string;
}

const { repo, url, description } = Astro.props as Project;
---

<div class="mx-auto mb-4 w-2/5 rounded-md border-2 border-accent px-4 py-1">
  <h4 class="my-1.5 text-lg font-bold text-primary underline">
    <a href={url} target="_blank" class="hover:text-accent">{repo}</a>
  </h4>
  <p class="my-1.5 text-sm text-gray-300">{description}</p>
</div>

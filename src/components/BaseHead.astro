---
import Cookies from '@components/Cookies.astro';
export interface Props {
  title: string;
  description: string;
  color?: string;
}
const { title, description, color } = Astro.props;
---

<head>
  <!-- Global Meta Tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="generator" content={Astro.generator} />
  <meta content={color || '#facade'} name="theme-color" />
  <meta name="color-scheme" content="dark light" />
  <link rel="icon" type="image/icon" href="/favicon.png" />

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={Astro.url} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />

  <!-- Styles -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />

  <!-- Scripts -->
  <script defer data-domain="aura.is-a.dev" src="https://plausible.floatingmilkshake.com/js/plausible.js"></script>
  <script defer src="https://cdn.auravoid.dev/data/made-by-aura.js"></script>
</head>

<Cookies />
